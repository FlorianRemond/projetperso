{% extends 'base.html.twig' %}
{%  block body%}
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Projet personnel{% endblock %}</title>
    <div align="center"style="font-size: 30px; color: white ; background-color: olive ">Vue Globale</div>
</head>

<body>
<div style="margin-top:5%"; align="center">

    <h2  align="center"style="text-decoration:underline">Merci de faire votre choix : </h2><br>

    <a class="btn btn-success" href="{{ path('musicien_insert') }}" role="button">Ajout d'un musicien en base</a><br><br>
    <a class="btn btn-primary" href="{{ path('musicien_list') }}" role="button">Modification d'un musicien en base</a><br><br>
    <a class="btn btn-danger" href="{{ path('musicien_remove') }}" role="button"> Suppression d'un musicien en base</a><br><br>

            <table style="margin-left: 10%" class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Instrument</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Date de cr√©ation</th>
                </tr>
                </thead>
                <tbody>
                {% for key,musicien in musiciens %}
                    <tr>
                        <td>{{ musicien.getName() }}</td>
                        <td>{{ musicien.getInstrument() }}</td>
                        <td>{{ musicien.getMail() }}</td>
                        <td>{{ musicien.getCreatedAt() | date('d/m/Y H:i') }}</td>
                    </tr>
                {% endfor %}
            </table>
</div>
</body>
</html>
{% endblock %}
